{
  "hooks": {
    "userPromptSubmit": [
      {
        "description": "SPARK Unified Orchestrator - Intelligent routing and lifecycle management",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/spark_unified_orchestrator.py"
          }
        ]
      }
    ],
    "subagentStart": [
      {
        "description": "Track subagent initialization",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/spark_unified_orchestrator.py"
          }
        ]
      }
    ],
    "subagentStop": [
      {
        "description": "SPARK Quality Gates - 12-point validation system",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/spark_unified_orchestrator.py"
          }
        ]
      }
    ],
    "toolUse": [
      {
        "description": "Monitor tool usage for optimization",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/spark_unified_orchestrator.py"
          }
        ]
      }
    ],
    "userPromptComplete": [
      {
        "description": "Finalize task and generate metrics",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/spark_unified_orchestrator.py"
          }
        ]
      }
    ],
    "assistantResponse": [
      {
        "description": "Track token usage and response patterns",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/spark_unified_orchestrator.py"
          }
        ]
      }
    ]
  },
  "theme": "dark",
  "telemetry": false,
  "maxFileSize": 100,
  "defaultModel": "sonnet",
  "spark": {
    "version": "3.0",
    "mode": "unified",
    "features": {
      "lazyLoading": true,
      "qualityGates": true,
      "securityHardening": true,
      "autoRetry": true,
      "lifecycleTracking": true,
      "pluginArchitecture": true
    },
    "performance": {
      "tokenReduction": "88.4%",
      "maxRetries": 3,
      "timeout": 30,
      "cacheEnabled": true
    }
  }
}